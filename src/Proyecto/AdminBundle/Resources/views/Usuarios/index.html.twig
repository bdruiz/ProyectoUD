{% extends ('layout.html.twig') %}

{% block body -%}
<div class="container">
    <div class="col-md-12">
        <div class="page-header margin-none">
            <h1 class="padding-none">Lista de usuarios</h1>
        </div>
        <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Username</th>
                                <th>Idcarnet</th>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <!--<th>Password</th>-->
                                <!--<th>Salt</th>-->
                                <th>Email</th>
                                <th>Estado</th>
                                <th>Foto</th>
                                <th>Isactive</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr data-id="{{ entity.id }}">
                                <td><a href="{{ path('ud_admin_usuarios_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.username }}</td>
                                <td>{{ entity.idCarnet }}</td>
                                <td>{{ entity.nombres }}</td>
                                <td>{{ entity.apellidos }}</td>
                                <!--<td>{#{ entity.password }#}</td>-->
                                <!--<td>{#{ entity.salt }#}</td>-->
                                <td>{{ entity.email }}</td>
                                <td>{{ entity.estado }}</td>
                                <td>{{ entity.foto }}</td>
                                <td>{{ entity.isActive }}</td>
                                <td class="actions">
                                        <a href="{{ path('ud_admin_usuarios_show', { 'id': entity.id }) }}" class="btn btn-sm btn-info">Mostrar</a>
                                        <a href="{{ path('ud_admin_usuarios_edit', { 'id': entity.id }) }}" class="btn btn-sm btn-primary">Editar</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
            </div>
                                <a href="{{ path('ud_admin_usuarios_new') }}" class="btn btn-sm btn-danger">
                                    Nuevo Usuario
                                </a>
    </div>
</div>
{% endblock %}
